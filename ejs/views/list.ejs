<%- include('header') -%>
<div class="box" id="heading">
    <h1><%= kindOfDay %></h1>
</div>
<div class="box">

    <% for(var i=0;i<tasks.length;i++){ %>
    <div class="item">
        <input type="checkbox">
        <p><%= tasks[i] %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
        <input type="text" name="task" placeholder="New Item" autocomplete="off" autofocus>
        <button type="submit" value="<%= kindOfDay %>" name="button">+</button>
    </form>

</div>
<%- include('footer') -%>